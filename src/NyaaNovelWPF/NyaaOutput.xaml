<Window x:Class="NyaaNovelWPF.NyaaOutput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NyaaOutput" Height="743.991" Width="1285.603" ResizeMode="CanMinimize" WindowStyle="ToolWindow">
    
    <Grid>
        
        <Image x:Name="Background" HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="1280" Stretch="UniformToFill"/>
        <Image x:Name="Shadow" HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="1280"/>
        <Image x:Name="CharacterImage" HorizontalAlignment="Right" Height="720" VerticalAlignment="Bottom" Width="1280" MouseDown="CharacterImage_MouseDown" Opacity="0"/>
        <Image x:Name="NameBG" Height="240" VerticalAlignment="Top" Width="1280" Stretch="Fill" HorizontalAlignment="Left" Canvas.Top="-5" Margin="0,476,0,0"/>
        <Label x:Name="NameText" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="47" VerticalAlignment="Top" Width="1270" FontSize="18" Canvas.Top="17" Margin="0,492,0,0"/>  
        <Image x:Name="TextBG" HorizontalAlignment="Left" Height="240" VerticalAlignment="Top" Width="1280" MouseDown="Image_MouseDown_1" Canvas.Left="-388" Canvas.Top="-70" Margin="0,473,0,0" Stretch="Fill"/>
        <TextBlock x:Name="MainText" HorizontalAlignment="Left" Height="169" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="1097" FontSize="22" MouseDown="MainText_MouseDown" Canvas.Left="10" Canvas.Top="53" Margin="89,544,0,0"/>
       
        <Grid x:Name="Choices" Margin="26,585,121,60" Visibility="Hidden">
            <Button x:Name="Choice1" Content="1" HorizontalAlignment="Left" Margin="0,0,0,0" Width="552" Height="30" VerticalAlignment="Top"/>
            <Button x:Name="Choice2" Content="2" HorizontalAlignment="Left" Margin="0,40,0,0" Width="552" Height="30" VerticalAlignment="Top"/>
            <Button x:Name="Choice3" Content="3" HorizontalAlignment="Left" Margin="581,0,0,0" Width="552" Height="30" VerticalAlignment="Top"/>
            <Button x:Name="Choice4" Content="4" HorizontalAlignment="Left" Margin="581,40,0,0" Width="552" Height="30" VerticalAlignment="Top"/>
        </Grid>
        <Rectangle x:Name="SceneSwitcher" Fill="Black" HorizontalAlignment="Left" Height="720" Stroke="Black" VerticalAlignment="Top" Width="1280" MouseDown="SceneSwitcher_MouseDown"/>
    </Grid>
</Window>
